    </head>
    
    <body>

        <main>

            <%- include("./partials/header.ejs") %>

            <section class="hero-section d-flex justify-content-center align-items-center" id="section_1">
                <div id="carouselExampleCaptions" class="carousel slide">
                  <% if (!user) { %>
                    <div class="carousel-indicators">
                      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                      <% } %>
                    </div>
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img src="https://codingyaar.com/wp-content/uploads/dark-flowers-1.png" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-flex flex-column h-100 align-items-center justify-content-center bottom-0">
                          <h3 class="bg-dark bg-opacity-80 py-2 px-4 rounded-pill">CurrencyConverter</h3>
                          <p class="bg-dark bg-opacity-80 py-2 px-4 rounded-pill xxx">We have the best currency transfer company in the world!</p>
                          <p class="bg-dark bg-opacity-80 py-2 px-4 rounded-pill">
                            <ul class="valuts">
                                <li class="USD">1 USD - X PLN</li>
                                <li class="EUR">1 EUR - X PLN</li>
                                <li class="UAH">1 UAH - X PLN</li>
                            </ul>
                          </p>
                          <% if (user) { %>
                            <a href="/buy-currency" class="btn btn-outline-light px-4 py-2 rounded-pill">Try it!</a>
                          <% } else { %>
                            <a href="/signup" class="btn btn-outline-light px-4 py-2 rounded-pill">Try it!</a>
                          <% } %>
                        </div>
                      </div>

                      <% if (!user) { %>
                      <div class="carousel-item">
                        <img src="https://codingyaar.com/wp-content/uploads/dark-flowers-2.png" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-flex flex-column h-100 align-items-center justify-content-center bottom-0 ">
                          <h3 class="bg-dark bg-opacity-80 py-2 px-4 rounded-pill">Do you want to transfer your money?</h3>
                          <p class="bg-dark bg-opacity-80 py-2 px-4 rounded-pill xxx">Create your account or login</p>
                          <p class="bg-dark bg-opacity-80 py-2 px-4 rounded-pill"></p>
                          <div class="btns-xxx">
                            <a href="/signin" class="btn btn-outline-light px-4 py-2 rounded-pill">Sign in</a>
                            <a href="/signup" class="btn btn-outline-light px-4 py-2 rounded-pill">Sign up</a>
                          </div>
                        </div>
                      </div>
                      <% } %>
                    </div>
                    <% if (!user) { %>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                    <% } %>
                  </div>

                <div class="video-wrap">
                    <video autoplay="" loop="" muted="" class="custom-video" poster="">
                        <source src="videos/video.mp4" type="video/mp4">

                        Your browser does not support the video tag.
                    </video>
                </div>
            </section>
        </main>

        <!-- JAVASCRIPT FILES -->
        <script src="js/currency.js"></script>
        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.bundle.min.js"></script>
        <script src="js/countdown.js"></script>
        <script src="js/init.js"></script>

    </body>
</html>
